extends layout

block content
    .user
        h2= title
        .row
        table.table.table-bordered
            thead
                tr
                    th 名字
                    th 密码
                    th 新建时间
                    th 查看
                    th 更新
                    th 删除
            tbody#userList
                each item in users
                    tr(class='item-id-#{item._id}')
                        td #{item.name}
                        td #{item.password}
                        td #{item.meta.createAt}
                        //td #{moment(item.mate.createdAt).format('MM/DD/YYY')}
                        td: a.btn.btn-info(href='#') 查看
                        td: a.btn.btn-success(href='#') 修改
                        td
                            button.btn.btn-danger.delete(type='button',data-id='#{item._id}') 删除
